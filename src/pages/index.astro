---
import Card from "../components/Card.astro";
import Section from "../components/Section.astro";
import Tool from "../components/Tool.astro";
import { projects, tools } from "../data/index.data";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Baruch Cerna">
  <nav>
    <div>
      <img src="/images/logo.png" alt="logo" />
      
    </div>
    <a href="#projects">Projects</a>
      <a href="#tools">Tools</a>
  </nav>
  <Section>
    <div class="header">
      <div class="header-container">
        <h1 class="enter">Baruch Cerna</h1>
        <h2 class="enter">Complexity made simple</h2>
      </div>
      <div class="header-container"></div>
      <p>
        I'm <span id="your">a</span> Web Developer based in Mexico
      </p>
    </div>
  </Section>
  <Section>
    <div class="header">
      <h2>
      "Logic and creativity, a little of both"
      </h2>
    <p>I live in Mexico, I studied computer systems engineering. I have more than 4 years designing solutions and writing code that has helped solve problems or bring ideas to reality in startups and multinationals, I rely on technologies that are at the forefront. I think the answer is more elegant if it is simple.</p>
  
    </div>
    </Section>
  <Section>
    <div class="tools">
      <h2>Main tools</h2>
      <ul id="tools">
        {tools.map((tool) => <Tool title={tool.title} body={tool.body} />)}
      </ul>
    </div>
  </Section>
  <Section>
    <div class="projects">
      <h2>Projects</h2>
      <h3>I've told some stories with real and innovative projects.</h3>
      <div class="cards">
        {
          projects.map((project, index) => (
            <Card
              title={project.title}
              body={project.body}
              href={project.href}
              image={project.image}
              technologies={project.technologies}
              isOdd={index % 2 !== 0}
            />
          ))
        }
      </ul>
    </div>
    
  </Section>
</Layout>

<style>
  .header-container {
    overflow: hidden;
  }

  h1 {
    font-size: 9rem;
  }

  h2 {
    font-size: 3rem;
  }

  h3 {
    font-size: 2rem;
    font-weight: 500;
  }

  p {
    font-size: 2rem;
  }

  ul {
    padding: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    max-width: 100%;
    height: auto;
    margin-top: 3rem;
  }

  .cards {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 1rem;
    width: 100%;
    height: 100%;
    margin-top: 3rem;
  }

  .header, .tools {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }

  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    width: 100%;
    gap: 1rem;
  }

  @media screen and (max-width: 575px) {
    main,
    section {
      padding: 2rem;
    }
    h1 {
      font-size: 5rem;
    }
    h2 {
      font-size: 2.5rem;
    }
    p {
      font-size: 1rem;
    }
  }
</style>
