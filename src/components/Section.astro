---
import { Image } from "astro:assets";

interface Props {
  bgColor: string;
}

const { bgColor } = Astro.props;
---

<section class="section">
  <div class="container" class:list={[bgColor]}>
    <slot />
  </div>
</section>
<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: rgb(var(--accent-light));
    padding: 2rem;
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    padding: 2rem;
    background-color: rgb(var(--accent-dark));
    border-radius: 1rem;
    text-align: center;
  }
