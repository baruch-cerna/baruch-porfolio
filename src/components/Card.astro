---
import { Image } from "astro:assets";

interface Props {
  title: string;
  body: string;
  href: string;
  technologies: string[];
  image: any;
  isOdd: boolean;
}

const { href, title, body, image, isOdd, technologies } = Astro.props;
---

<div class:list={["link-card", {"reverse": isOdd}]}>
  <a class="card-ref" href={href} target="_blank" rel="noopener noreferrer">
    <Image src={image} alt={title} inferSize loading={"lazy"} />
  </a>
  <div>
    <h3>
      {title}
    </h3>
    <p>
      {body}
    </p>
    <p>
      <strong>Technologies:</strong>
      {technologies.join(", ")}
    </p>
  </div>
</div>
<style>
  .link-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 400px;
    height: 600px;
    border: 2px solid rgb(var(--accent-light));
    border-radius: 1rem;
    overflow: hidden;
  }

  .link-card > a {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 250px;
    padding: 3rem;
    text-decoration: none;
    line-height: 1.4;
  }

  .link-card > div {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    height: 350px;
    padding: 1rem;
  }

  img {
    width: 100%;
    height: auto;
    object-fit: scale-down;
    object-position: center;
    border-radius: 0.5rem;
  }

  h3 {
    margin: 0;
    color: rgb(var(--accent-light));
  }
  
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: rgb(var(--accent-light));
  }

  span {
    margin: 0;
    padding: 0 0.25rem;
  }
</style>
