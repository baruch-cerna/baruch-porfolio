---
import { Image } from "astro:assets";

interface Props {
  title: string;
  body: string;
  href: string;
  technologies: string[];
  image: any;
}

const { href, title, body, image, technologies } = Astro.props;
---

<div class="link-card">
  <div class="image">
    <Image src={image} alt={title} inferSize loading={"lazy"} />
  </div>
  <div class="card-body">
    <a class="card-ref" href={href} target="_blank" rel="noopener noreferrer">
      <h3>
        {title}
      </h3>
    </a>
    <p>
      {body}
    </p>
    <p>
      <strong>Tecnologias:</strong>
      {technologies.join(", ")}
    </p>
  </div>
</div>

<style>
  .link-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 420px;
    min-width: 420px;
    height: 630px;
    overflow: hidden;
  }

  .link-card > .image {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 250px;
    padding: 3rem;
    overflow: hidden;
  }

  .link-card > .card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    height: 380px;
  }

  img {
    width: 100%;
    height: auto;
    object-fit: scale-down;
    object-position: center;
  }

  h3 {
    margin: 0;
    color: rgb(var(--accent-light));
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: rgb(var(--accent-light));
  }

  span {
    margin: 0;
    padding: 0 0.25rem;
  }

  @media screen and (max-width: 575px) {
    .link-card {
      width: 290px;
      min-width: 290px;
      height: 700px;
    }

    .link-card > .image {
      padding: 2rem;
    }
  }
</style>
