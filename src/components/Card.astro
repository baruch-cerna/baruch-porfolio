---
import { Image } from "astro:assets";

interface Props {
  title: string;
  body: string;
  href: string;
  technologies: string[];
  image: any;
}

const { href, title, body, image, technologies } = Astro.props;
---

<div class="link-card">
  <div class="image">
    <Image src={image} alt={title} inferSize loading={"lazy"} />
  </div>
  <div class="card-body">
    <a class="card-ref" href={href} target="_blank" rel="noopener noreferrer">
      <h3>
        {title}
      </h3>
    </a>
    <p>
      {body}
    </p>
    <p>
      <strong>Tecnologias:</strong>
      {technologies.join(", ")}
    </p>
  </div>
</div>

<style>
  .link-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 37rem;
    min-width: 37rem;
    height: auto;
    aspect-ratio: 2 / 3;
    overflow: hidden;
  }

  .link-card > .image {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 18rem;
    padding: 4rem;
    overflow: hidden;
  }

  .link-card > .card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    gap: 2rem;
    height: auto;
  }

  img {
    width: 100%;
    height: auto;
    object-fit: scale-down;
    object-position: center;
  }

  h3 {
    margin: 0;
    color: rgb(var(--accent-light));
  }

  p {
    margin-top: 0.5rem;
  }

  span {
    margin: 0;
    padding: 0 0.25rem;
  }

  @media screen and (max-width: 1024px) {
    .link-card {
      width: 33rem;
      min-width: 33rem;
    }

    .link-card > .image {
      height: 15rem;
      padding: 4rem;
    }
  }

  @media screen and (max-width: 768px) {
    .link-card {
      width: 28rem;
      min-width: 28rem;
    }

    .link-card > .image {
      height: 14rem;
      padding: 2rem;
    }

    .link-card > .card-body {
      gap: 1rem;
    }
  }

  @media screen and (max-width: 575px) {
    .link-card {
      width: 25rem;
      min-width: 25rem;
    }

    .link-card > .image {
      height: 13rem;
    }
  }
</style>
