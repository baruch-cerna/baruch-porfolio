---
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Logic / About Section -->
<section
  id="logic"
  class="py-32 px-4 border-t border-white/5 bg-black/10 backdrop-blur-sm"
>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-8 reveal">
        <div>
          <span class="font-mono text-xs text-gray-300 block mb-2">
            // {t("nav.link_logic")}
          </span>
          <h2 class="text-4xl font-bold text-white tracking-tight">
            {t("logic.title")}
          </h2>
        </div>

        <div class="h-px w-20 bg-white"></div>
        <p class="text-gray-300 text-lg leading-relaxed font-light">
          {t("logic.paragraph_1")}
        </p>
        <p class="text-gray-300 text-lg leading-relaxed font-light">
          {t("logic.paragraph_2")}
        </p>

        <div class="grid grid-cols-2 gap-4 pt-4">
          <div class="p-4 border border-white/10 bg-white/5">
            <div class="font-mono text-xs text-gray-300 mb-1">01. {t("logic.analysis_trait")?.toUpperCase()}</div>
            <div class="text-white">{t("logic.analysis_description")}</div>
          </div>
          <div class="p-4 border border-white/10 bg-white/5">
            <div class="font-mono text-xs text-gray-300 mb-1">
              02. {t("logic.synthesis_trait")?.toUpperCase()}
            </div>
            <div class="text-white">{t("logic.synthesis_description")}</div>
          </div>
        </div>
      </div>

      <div class="relative reveal" style="transition-delay: 200ms">
        <!-- Decorative Terminal -->
        <div
          class="border border-white/10 bg-[#0a0a0a] p-1 rounded-sm shadow-2xl"
        >
          <div class="bg-[#111] p-2 flex gap-2 border-b border-white/5">
            <div class="w-3 h-3 rounded-full bg-gray-700"></div>
            <div class="w-3 h-3 rounded-full bg-gray-800"></div>
            <div class="w-3 h-3 rounded-full bg-gray-900"></div>
          </div>
          <div class="p-6 font-mono text-sm text-gray-300 leading-loose">
            <span class="text-gray-600">const</span>
            <span class="text-white">developer</span> = {"{"}<br />
            &nbsp;&nbsp;name: <span class="text-gray-300">"Baruch Cerna"</span
            >,<br />
            &nbsp;&nbsp;traits: [<br />
            &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-300"
              >"{t("logic.trait_1")}"</span
            >,<br />
            &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-300"
              >"{t("logic.trait_2")}"</span
            >,<br />
            &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-300"
              >"{t("logic.trait_3")}"</span
            ><br />
            &nbsp;&nbsp;],<br />
            &nbsp;&nbsp;solve: <span class="text-gray-600">function</span
            >(problem) {"{"}<br />
            &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-600">return</span> decompose(problem).optimize();<br
            />
            &nbsp;&nbsp;{"}"}<br />
            {"}"};
            <div class="mt-4 animate-blink">_</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
