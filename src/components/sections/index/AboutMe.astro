---
import Section from "../../Section.astro";
const initDate = new Date();
initDate.setDate(15);
initDate.setMonth(3);
initDate.setFullYear(2020);
const nowDate = new Date();
const diffTime = nowDate.getTime() - initDate.getTime();
const yoe = Math.floor(diffTime / (1000 * 60 * 60 * 24 * 365));
---

<!-- Logic / About Section -->
<section id="logic" class="py-32 px-4 border-t border-white/5 bg-black/50 backdrop-blur-sm">
  <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          
          <div class="space-y-8 reveal">
              <h2 class="text-4xl font-bold text-white tracking-tight">The Abstract Machine</h2>
              <div class="h-px w-20 bg-white"></div>
              <p class="text-gray-400 text-lg leading-relaxed font-light">
                  I approach web development like a mathematical proof. It's not enough for code to work; it must be structurally sound, scalable, and logically consistent.
              </p>
              <p class="text-gray-400 text-lg leading-relaxed font-light">
                  Based on the INTP cognitive stack, I filter user requirements through a rigorous internal logic framework before outputting clean, efficient solutions.
              </p>

              <div class="grid grid-cols-2 gap-4 pt-4">
                  <div class="p-4 border border-white/10 bg-white/5">
                      <div class="font-mono text-xs text-gray-500 mb-1">01. ANALYSIS</div>
                      <div class="text-white">Deep Dive Research</div>
                  </div>
                  <div class="p-4 border border-white/10 bg-white/5">
                      <div class="font-mono text-xs text-gray-500 mb-1">02. SYNTHESIS</div>
                      <div class="text-white">System Architecture</div>
                  </div>
              </div>
          </div>

          <div class="relative reveal" style="transition-delay: 200ms">
              <!-- Decorative Terminal -->
              <div class="border border-white/10 bg-[#0a0a0a] p-1 rounded-sm shadow-2xl">
                  <div class="bg-[#111] p-2 flex gap-2 border-b border-white/5">
                      <div class="w-3 h-3 rounded-full bg-gray-700"></div>
                      <div class="w-3 h-3 rounded-full bg-gray-800"></div>
                      <div class="w-3 h-3 rounded-full bg-gray-900"></div>
                  </div>
                  <div class="p-6 font-mono text-sm text-gray-400 leading-loose">
                      <span class="text-gray-600">const</span> <span class="text-white">developer</span> = {'{'}<br>
                      &nbsp;&nbsp;name: <span class="text-gray-300">"Baruch Cerna"</span>,<br>
                      &nbsp;&nbsp;traits: [<br>
                      &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-300">"Analytical"</span>,<br>
                      &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-300">"Minimalist"</span>,<br>
                      &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-300">"Autodidact"</span><br>
                      &nbsp;&nbsp;],<br>
                      &nbsp;&nbsp;solve: <span class="text-gray-600">function</span>(problem) {'{'}<br>
                      &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-gray-600">return</span> decompose(problem).optimize();<br>
                      &nbsp;&nbsp;{'}'}<br>
                      {'}'};
                      <div class="mt-4 animate-blink">_</div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>