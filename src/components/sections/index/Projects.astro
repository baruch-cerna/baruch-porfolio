<section id="projects" class="py-32 px-4 border-t border-white/5">
  <div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-end mb-16 reveal">
      <div>
          <span class="font-mono text-xs text-gray-500 block mb-2">// DEPLOYMENTS</span>
          <h2 class="text-3xl md:text-5xl font-bold text-white">Output Log</h2>
      </div>
      <div class="font-mono text-xs text-gray-600 hidden md:block">
          DISPLAYING_LATEST: TRUE
      </div>
  </div>

      <div class="space-y-0">
          {[
              { date: '01 / 2024', title: 'Project: MONOLITH', desc: 'A headless CMS built for high-frequency trading platforms. Focus on microsecond latency and data integrity.', tags: ['Rust', 'WebAssembly'] },
              { date: '11 / 2023', title: 'Project: VOID_WALKER', desc: 'Procedural terrain generation engine running entirely in the browser using WebGL shaders.', tags: ['Three.js', 'GLSL'] },
              { date: '08 / 2023', title: 'Project: GREYSCALE', desc: 'Minimalist task management system for neurodivergent developers. Removes all color to reduce dopamine spikes.', tags: ['Next.js', 'Prisma'] }
          ].map((project) => (
              <div class="group relative border-t border-white/10 hover:bg-white/5 transition-colors duration-500 reveal">
                  <div class="grid grid-cols-1 md:grid-cols-12 gap-8 py-12 items-center">
                      <div class="md:col-span-2 font-mono text-xs text-gray-500">{project.date}</div>
                      <div class="md:col-span-6">
                          <h3 class="text-2xl font-bold text-white mb-2 group-hover:translate-x-2 transition-transform">{project.title}</h3>
                          <p class="text-gray-400 font-light">{project.desc}</p>
                      </div>
                      <div class="md:col-span-4 flex justify-start md:justify-end items-center gap-4">
                          {project.tags.map(tag => (
                              <span class="text-xs font-mono border border-gray-700 px-2 py-1 text-gray-400">{tag}</span>
                          ))}
                          <a href="#" class="w-10 h-10 rounded-full border border-white/20 flex items-center justify-center text-white hover:bg-white hover:text-black transition-colors">
                              <i class="fas fa-arrow-right -rotate-45"></i>
                          </a>
                      </div>
                  </div>
              </div>
          ))}
      </div>
  </div>
</section>