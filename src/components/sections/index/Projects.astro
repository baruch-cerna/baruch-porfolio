---
import { projects } from "../../../data/index.data";
import Card from "../../Card.astro";
import HorizontalScroll from "../../HorizontalScroll.astro";
---

<HorizontalScroll>
  <div class="panel container">
      <h2 class="clip-reveal" data-animate>
        Diseño productos digitales centrados en resultados
      </h2>
      <p class="quote" data-animate="quote">
        Cada proyecto es una solución concreta, construida con código elegante y
        una visión estratégica.
      </p>
  </div>
  {
    projects.map((project) => (
      <div class="panel">
        <Card
          title={project.title}
          body={project.body}
          href={project.href}
          image={project.image}
          technologies={project.technologies}
        />
      </div>
    ))
  }
</HorizontalScroll>

<style>

  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    min-height: 100vh;
    width: 100%;
  }
  .projects {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100%;
    width: 100%;
    gap: 3rem;
    margin: 2rem 0;
    overflow-x: auto;
    scrollbar-color: rgb(var(--accent-light)) rgb(var(--accent));
    scrollbar-width: thin;
  }

  @media screen and (max-width: 575px) {
    .projects {
      gap: 2rem;
    }
  }
</style>
